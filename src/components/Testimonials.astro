const testimonials = [
    {
        name: "Sarah Johnson",
        location: "Nottingham",
        text: "Got my test date within 2 weeks! The service was incredible and saved me months of waiting.",
        ctaIcon: "üéØ",
        ctaTitle: "GET A TEST DATE NOW!",
        ctaText: "Skip the 3-month wait",
        rating: 5
    },
    {
        name: "James Wilson",
        location: "Beeston",
        text: "Professional and efficient. Managed to get a cancellation slot at Chilwell test center within days.",
        ctaIcon: "‚ö°",
        ctaTitle: "GET A TEST DATE NOW!",
        ctaText: "Limited slots available",
        rating: 5
    },
    {
        name: "Emma Thompson",
        location: "West Bridgford",
        text: "Worth every penny! Helped me secure a test date that fit perfectly with my intensive course.",
        ctaIcon: "üéâ",
        ctaTitle: "GET A TEST DATE NOW!",
        ctaText: "Book within 24 hours",
        rating: 5
    }
];
---

<section class="testimonials">
    <div class="container">
        <h2>What Our Customers Say</h2>
        <div class="testimonials-grid">
            {testimonials.map(testimonial => (
                <a href={GOOGLE_FORM_URL} class="testimonial-card" target="_blank" rel="noopener noreferrer">
                    <div class="card-content">
                        <div class="animated-background"></div>
                        <div class="content-wrapper">
                            <div class="stars">
                                {"‚òÖ".repeat(testimonial.rating)}
                            </div>
                            <div class="testimonial-text">
                                <div class="default-view">
                                    <div class="text-content">
                                        <blockquote>{testimonial.text}</blockquote>
                                        <div class="testimonial-info">
                                            <div class="name">{testimonial.name}</div>
                                            <div class="location">{testimonial.location}</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="hover-view">
                                    <div class="cta-icon">{testimonial.ctaIcon}</div>
                                    <div class="cta-text">
                                        <div class="cta-title">{testimonial.ctaTitle}</div>
                                        <div class="cta-description">{testimonial.ctaText}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="quote-mark">‚ùù</div>
                    </div>
                </a>
            ))}
        </div>
    </div>
</section>

<style>
    .testimonials {
        padding: 4rem 0;
        background: white;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    h2 {
        text-align: center;
        margin-bottom: 3rem;
        font-size: 2.5rem;
        color: #23262d;
    }
    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        padding: 1rem;
    }
    .testimonial-card {
        height: 220px;
        position: relative;
        cursor: pointer;
        perspective: 1000px;
        text-decoration: none;
    }
    .card-content {
        position: absolute;
        inset: 0;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        transition: all 0.3s ease;
        overflow: hidden;
    }
    .animated-background {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            45deg,
            #f5f5f5,
            #e0e0e0,
            #f5f5f5,
            #e8e8e8
        );
        background-size: 400% 400%;
        animation: gradientMove 8s ease infinite;
        z-index: 0;
    }
    @keyframes gradientMove {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
    .content-wrapper {
        padding: 1.5rem;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        position: relative;
        z-index: 1;
    }
    .stars {
        font-size: 1.8rem;
        color: #FFD700;
        letter-spacing: 2px;
        transition: all 0.3s ease;
        line-height: 1;
        margin-bottom: 0.5rem;
    }
    .testimonial-text {
        flex-grow: 1;
        position: relative;
        width: 100%;
        display: flex;
        align-items: center;
    }
    .text-content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .default-view, .hover-view {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease;
    }
    .hover-view {
        opacity: 0;
        transform: translateY(10px);
    }
    .cta-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        transform: scale(0.8);
        transition: transform 0.3s ease;
    }
    .cta-text {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .cta-title {
        color: white;
        font-weight: bold;
        font-size: 1.1rem;
        line-height: 1.2;
    }
    .cta-description {
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.9rem;
        line-height: 1.4;
    }
    blockquote {
        font-size: 0.95rem;
        color: #666;
        line-height: 1.5;
        margin: 0 0 1rem 0;
    }
    .testimonial-info {
        margin-top: auto;
    }
    .name {
        font-weight: bold;
        color: #23262d;
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }
    .location {
        font-size: 0.8rem;
        color: #666;
    }
    .quote-mark {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        font-size: 2rem;
        color: #e0e0e0;
        z-index: 0;
        transition: all 0.3s ease;
    }
    .testimonial-card:hover .card-content {
        transform: translateY(-5px) rotateX(5deg);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }
    .testimonial-card:hover .animated-background {
        animation-play-state: paused;
    }
    .testimonial-card:hover .card-content::after {
        content: '';
        position: absolute;
        inset: 0;
        background: #4CAF50;
        z-index: 1;
        transition: opacity 0.3s ease;
    }
    .testimonial-card:hover .stars {
        color: #FF69B4;
        z-index: 2;
        position: relative;
    }
    .testimonial-card:hover .default-view {
        opacity: 0;
        transform: translateY(-10px);
    }
    .testimonial-card:hover .hover-view {
        opacity: 1;
        transform: translateY(0);
        z-index: 2;
    }
    .testimonial-card:hover .quote-mark {
        color: rgba(255,255,255,0.1);
        transform: scale(1.1);
        z-index: 2;
    }
    .testimonial-card:hover .cta-icon {
        transform: scale(1);
    }
    .testimonial-card:hover .content-wrapper {
        z-index: 2;
    }

    @media (max-width: 968px) {
        .testimonials-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .testimonials-grid {
            grid-template-columns: 1fr;
        }
        .testimonial-card {
            height: 200px;
        }
    }
</style>