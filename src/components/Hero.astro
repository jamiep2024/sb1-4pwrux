<script>
    document.addEventListener('DOMContentLoaded', () => {
        import('canvas-confetti').then((confetti) => {
            const bookNowBtn = document.getElementById('bookNowBtn');
            
            if (bookNowBtn) {
                bookNowBtn.addEventListener('mouseenter', () => {
                    const colors = ['#4CAF50', '#FFD700', '#ffffff'];
                    const end = Date.now() + 200;

                    const frame = () => {
                        confetti.default({
                            particleCount: 3,
                            angle: 60,
                            spread: 55,
                            origin: { x: 0 },
                            colors: colors
                        });
                        confetti.default({
                            particleCount: 3,
                            angle: 120,
                            spread: 55,
                            origin: { x: 1 },
                            colors: colors
                        });

                        if (Date.now() < end) {
                            requestAnimationFrame(frame);
                        }
                    };

                    frame();
                });
            }
        });
    });
</script>

<style>
