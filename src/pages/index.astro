---
import Layout from '../layouts/Layout.astro';
import BookingCard from '../components/BookingCard.astro';
import Benefits from '../components/Benefits.astro';
import FAQ from '../components/FAQ.astro';
import Hero from '../components/Hero.astro';
import SEOContent from '../components/SEOContent.astro';
import LocationInfo from '../components/LocationInfo.astro';
import Testimonials from '../components/Testimonials.astro';
---

<Layout title="Fast Track Driving Test Booking Service Nottingham | Same Day Availability">
	<main>
		<Hero />
		<Benefits />
		<section class="booking-section">
			<div class="container">
				<h2>Fast Track Driving Test Booking Service</h2>
				<p class="price">Only Â£120 per booking</p>
				<BookingCard />
			</div>
		</section>
		<Testimonials />
		<LocationInfo />
		<FAQ />
		<SEOContent />
	</main>
</Layout>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}
	.booking-section {
		background: #f5f5f5;
		padding: 4rem 0;
		text-align: center;
	}
	.price {
		font-size: 2rem;
		color: #23262d;
		margin: 1rem 0 2rem;
	}
	h2 {
		font-size: 2.5rem;
		color: #23262d;
		margin-bottom: 1rem;
	}
</style>